<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Login</h1>

      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>

      <div>
        <%= form_tag '/login' do %>
          <div class="form-group">
            Username: <%= text_field_tag :id, '', class: 'form-control' %><br>
          </div>
          <div class="form-group">
            Password: <%= password_field_tag :password, '', class: 'form-control' %><br>
          </div>
          <%= submit_tag "Log In", :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>